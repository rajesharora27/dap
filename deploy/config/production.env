# DAP Production Environment Configuration
# Copy to /data/dap/app/.env on production server

NODE_ENV=production

# Database
DATABASE_URL=postgresql://dap:dap_prod_secure_2024!@localhost:5432/dap?schema=public
DB_PROVIDER=postgresql

# Application Ports
PORT=4000
FRONTEND_PORT=3000

# Authentication
JWT_SECRET=your-secure-jwt-secret-change-in-production
JWT_EXPIRY=24h
SESSION_TIMEOUT=3600000

# Feature Flags
SEED_DEFAULT_USERS=false
SEED_SAMPLE_DATA=false
DISABLE_AUTH=false
NO_AUTH=false

# Admin Credentials (only used if SEED_DEFAULT_USERS=true)
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS (adjust for your domain)
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100


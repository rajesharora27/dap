#!/bin/bash

# â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
# â•‘ DAP Test Runner Script                                                       â•‘
# â•‘ Consolidated testing for the DAP Application                                 â•‘
# â•‘                                                                              â•‘
# â•‘ Commands: all, unit, e2e, crud, tags, integration, coverage, help           â•‘
# â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

set -e
set -o pipefail

# ================================
# Configuration
# ================================
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$SCRIPT_DIR"
BACKEND_DIR="$PROJECT_DIR/backend"
FRONTEND_DIR="$PROJECT_DIR/frontend"
TESTS_DIR="$PROJECT_DIR/tests"

# Database containers
DB_CONTAINER=$(docker ps --format "{{.Names}}" 2>/dev/null | grep -E "dap[-_](db|postgres)" | head -1 || echo "")

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

# ================================
# Logging Functions
# ================================
log_info() {
    echo -e "${BLUE}â„¹ ${NC}$1"
}

log_success() {
    echo -e "${GREEN}âœ” ${NC}$1"
}

log_warning() {
    echo -e "${YELLOW}âš  ${NC}$1"
}

log_error() {
    echo -e "${RED}âœ– ${NC}$1"
}

log_header() {
    echo ""
    echo -e "${CYAN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo -e "${CYAN}  $1${NC}"
    echo -e "${CYAN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
}

# ================================
# Platform Detection
# ================================
use_mac_mode() {
    [[ "$(uname)" == "Darwin" ]]
}

get_current_user() {
    whoami
}

# ================================
# Database Helpers
# ================================
ensure_test_database() {
    log_info "â³ Ensuring test database exists as an exact copy of 'dap'..."
    
    if use_mac_mode; then
        local current_user=$(get_current_user)
        log_info "ğŸ“¥ Cloning 'dap' to 'dap_test'..."
        
        # Try finding the correct pg_dump to avoid version mismatch
        local pg_dump_bin="pg_dump"
        if [ -d "/opt/homebrew/opt/postgresql@16/bin" ]; then
            pg_dump_bin="/opt/homebrew/opt/postgresql@16/bin/pg_dump"
        elif [ -d "/opt/homebrew/opt/postgresql@15/bin" ]; then
            pg_dump_bin="/opt/homebrew/opt/postgresql@15/bin/pg_dump"
        fi

        # Terminate connections to dap_test to avoid "being accessed by other users" error
        psql -h localhost -p 5432 -d postgres -c "SELECT pg_terminate_backend(pid) FROM pg_stat_activity WHERE datname = 'dap_test' AND pid <> pg_backend_pid();" >/dev/null 2>&1 || true
        dropdb -h localhost -p 5432 dap_test --if-exists 2>/dev/null || true
        
        # Try template-based clone first (fastest)
        if createdb -h localhost -p 5432 -T dap dap_test 2>/dev/null; then
            log_success "âœ… Created test database via template clone"
        else
            log_warning "âš ï¸  Template clone failed (likely 'dap' is in use), falling back to pg_dump..."
            createdb -h localhost -p 5432 dap_test 2>/dev/null
            $pg_dump_bin -h localhost -p 5432 -d dap --no-owner --no-privileges | psql -h localhost -p 5432 -d dap_test -q > /dev/null
        fi
        
        export DATABASE_URL="postgresql://${current_user}@localhost:5432/dap_test?schema=public"
    else
        if [ -n "$DB_CONTAINER" ]; then
            log_info "ğŸ“¥ Cloning 'dap' to 'dap_test' (Docker)..."
            docker exec $DB_CONTAINER dropdb -U postgres dap_test --if-exists 2>/dev/null || true
            if docker exec $DB_CONTAINER createdb -U postgres -T dap dap_test 2>/dev/null; then
                 log_success "âœ… Created test database via template clone (Docker)"
            else
                docker exec $DB_CONTAINER createdb -U postgres dap_test 2>/dev/null || true
                docker exec $DB_CONTAINER pg_dump -U postgres -d dap --no-owner --no-privileges | docker exec -i $DB_CONTAINER psql -U postgres -d dap_test -q > /dev/null
            fi
        fi
        export DATABASE_URL="postgres://postgres:postgres@localhost:5432/dap_test?schema=public"
    fi
    
    log_success "âœ… Test database cloned and ready"
}

run_migrations_on_test_db() {
    log_info "ğŸ”„ Syncing test database schema..."
    cd "$BACKEND_DIR"
    # Use db push for development speed, ensuring schema matches local prisma file
    npx prisma db push --skip-generate --accept-data-loss > /dev/null 2>&1 || true
    log_success "âœ… Test database schema in sync"
}

# ================================
# Test Runners
# ================================

# Run comprehensive E2E CRUD test suite
run_comprehensive_test() {
    log_header "COMPREHENSIVE E2E TEST (Shadow Database)"
    
    echo ""
    log_info "ğŸ“ Working Directory: $BACKEND_DIR"
    log_info "ğŸ—ƒï¸  Database: dap_test (shadow copy - dev data protected!)"
    log_info "ğŸ”§ NODE_ENV: test"
    log_info "ğŸ” Test: comprehensive-crud (38 tests)"
    echo ""
    
    ensure_test_database
    
    cd "$BACKEND_DIR"
    run_migrations_on_test_db
    
    export NODE_ENV="test"
    export CI="true"
    
    echo ""
    log_info "ğŸ’» Running E2E tests..."
    echo -e "${CYAN}â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€${NC}"
    echo ""
    
    if npm test -- --runInBand --passWithNoTests --testPathPattern="comprehensive-crud"; then
        echo ""
        echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        log_success "ğŸ‰ COMPREHENSIVE E2E TEST PASSED!"
        echo -e "${GREEN}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo ""
        log_info "All 38 tests passed:"
        log_info "âœ… Product CRUD (create, read, update, delete, outcomes, releases, licenses)"
        log_info "âœ… Task CRUD (create, read, update, delete, telemetry, reorder)"
        log_info "âœ… Solution CRUD (create, read, update, add/remove products)"
        log_info "âœ… Customer CRUD (create, read, update, delete)"
        log_info "âœ… Adoption Plans (assign products, create/update/delete plans)"
        log_info "âœ… Import/Export (full data export, custom attributes)"
        log_info "âœ… Telemetry Evaluation (success criteria, multiple data types)"
        echo ""
        return 0
    else
        echo ""
        echo -e "${RED}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        log_error "âŒ COMPREHENSIVE E2E TEST FAILED!"
        echo -e "${RED}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
        echo ""
        log_warning "Check the test output above for specific failures"
        log_info "Fix any issues and run './dap-test e2e' again"
        return 1
    fi
}

